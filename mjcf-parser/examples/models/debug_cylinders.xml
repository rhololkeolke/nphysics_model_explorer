<mujoco model="Static Cylinders">
  <worldbody>
    <!-- coordinate frame -->
    <geom name="xaxis" type="cylinder" size="0.01" fromto="0 0 0 .5 0 0" rgba="1 0 0 1"/>
    <geom name="yaxis" type="cylinder" size="0.01" fromto="0 0 0 0 .5 0" rgba="0 1 0 1"/>
    <geom name="zaxis" type="cylinder" size="0.01" fromto="0 0 0 0 0 .5" rgba="0 0 1 1"/>

    <!-- Spheres to mark start and ends of the coordinate frames -->
    <geom type="sphere" size="0.05" pos="0 0 0" rgba="0.5 0.5 0.5 1"/>
    <geom type="sphere" size="0.05" pos="0.5 0 0" rgba="1 0 0 1"/>
    <geom type="sphere" size="0.05" pos="0 0.5 0" rgba="0 1 0 1"/>
    <geom type="sphere" size="0.05" pos="0 0 0.5" rgba="0 0 1 1"/>
  </worldbody>
</mujoco>
